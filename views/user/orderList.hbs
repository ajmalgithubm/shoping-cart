<section class="p-5">
    <table class="table mt-1">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Address</th>
                <th scope="col">Mobile</th>
                <th scope="col">Amount</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each orderList}}
            <tr>
                <td>{{this.orders.date}}</td>
                <!--../../public/productImages/{{this._id}}.jpg-->
                <td>{{this.orders.deliveryDetails.address}}</td>
                <td>{{this.orders.deliveryDetails.phoneNumber}}</td>
                <td>{{this.orders.totalAmount}}</td>
                <td>{{this.orders.status}}</td>
                <td><a href="/view-order-product/{{this._id}}"><button class="btn btn-primary">VIEW PRODUCT</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>