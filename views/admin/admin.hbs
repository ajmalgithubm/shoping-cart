<section class="p-5">
    <table class="table mt-5">
        <div style="display: flex;justify-content:end" class="mt-1">
            <a href="/admin/add-product" class="btn btn-success">add Product</a>
        </div>
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">name</th>
                <th scope="col">image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td><img src={{this.image}} style="width: 50px; height:50px" alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>