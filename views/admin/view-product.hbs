<section class="p-5">
    <table class="table mt-1">
        <div style="display: flex;justify-content:end" class="mt-1">
            <a href="/admin/add-product" class="btn btn-success">add Product</a>
        </div>
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">name</th>
                <th scope="col">image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <!--../../public/productImages/{{this._id}}.jpg-->
                <td><img src="images/{{this._id}}.jpg" style="width: 50px; height:50px" alt=""></td>
                <td>
                    <a href="/admin/edit-product" class="btn btn-info">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you Want to delete {{this.name}}')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section> 