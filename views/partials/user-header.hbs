<header style="width: 100%;">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(33, 20, 37);color:white">
        <a class="navbar-brand text-light" href="#">Shopping Cart</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-light" href="/">Products<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="/cart">Carts<span class="badge badge-success ml-2" id="cart-count">{{totalQuantity}}</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="/orders">Orders</a>
                </li>

            </ul>
        </div>
        <div class="dropdown show">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
               {{#if status}}
               {{userName}}
               {{else}}
               Account
               {{/if}}
            </a>
        
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                {{#if status}}
                <a class="dropdown-item" href="/logout">Logout</a>
                {{else}}
                <a class="dropdown-item" href="/login">Login</a>
                {{/if}}
            </div>
        </div>
    </nav>
</header>